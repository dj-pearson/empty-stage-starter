# Platform Test Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Base Configuration
# ============================================

# Base URL of the application to test
PLATFORM_TEST_BASE_URL=http://localhost:8080

# Application name (used in reports)
PLATFORM_TEST_APP_NAME=EatPal

# ============================================
# REQUIRED: Demo Account Credentials
# ============================================

# Primary test account (must exist in the system)
PLATFORM_TEST_EMAIL=test@example.com
PLATFORM_TEST_PASSWORD=TestPassword123!

# Secondary test account (for multi-user tests)
PLATFORM_TEST_EMAIL_2=test2@example.com
PLATFORM_TEST_PASSWORD_2=TestPassword123!

# Admin account (for admin-only features)
PLATFORM_TEST_ADMIN_EMAIL=admin@example.com
PLATFORM_TEST_ADMIN_PASSWORD=AdminPassword123!

# ============================================
# OPTIONAL: Test Behavior
# ============================================

# Browser to use: chromium, firefox, webkit
PLATFORM_TEST_BROWSER=chromium

# Run in headless mode (true/false)
PLATFORM_TEST_HEADLESS=true

# Slow down actions by X milliseconds (for debugging)
PLATFORM_TEST_SLOW_MO=0

# Screenshot on failure (true/false)
PLATFORM_TEST_SCREENSHOT_ON_FAIL=true

# Video recording: off, on, retain-on-failure
PLATFORM_TEST_VIDEO=retain-on-failure

# Default timeout in milliseconds
PLATFORM_TEST_TIMEOUT=30000

# Navigation timeout in milliseconds
PLATFORM_TEST_NAVIGATION_TIMEOUT=60000

# ============================================
# OPTIONAL: Discovery Configuration
# ============================================

# Maximum depth for crawling (number of clicks deep)
PLATFORM_TEST_MAX_DEPTH=5

# Maximum pages to discover
PLATFORM_TEST_MAX_PAGES=100

# Routes to exclude from discovery (comma-separated patterns)
PLATFORM_TEST_EXCLUDE_ROUTES=/admin/*,/debug/*,/api/*

# Routes that require authentication (comma-separated)
PLATFORM_TEST_AUTH_ROUTES=/dashboard/*,/settings/*,/profile/*

# ============================================
# OPTIONAL: Form Filling Configuration
# ============================================

# Default form data (JSON format)
PLATFORM_TEST_DEFAULT_FORM_DATA={"firstName":"Test","lastName":"User","phone":"555-123-4567"}

# Credit card for payment testing (Stripe test card)
PLATFORM_TEST_STRIPE_CARD=4242424242424242
PLATFORM_TEST_STRIPE_EXP=12/28
PLATFORM_TEST_STRIPE_CVC=123
PLATFORM_TEST_STRIPE_ZIP=12345

# ============================================
# OPTIONAL: Parallel Execution
# ============================================

# Number of parallel workers
PLATFORM_TEST_WORKERS=4

# Retry failed tests X times
PLATFORM_TEST_RETRIES=2

# ============================================
# OPTIONAL: Reporting
# ============================================

# Report format: html, json, junit, all
PLATFORM_TEST_REPORT_FORMAT=all

# Report output directory
PLATFORM_TEST_REPORT_DIR=./platform-test/reports

# Slack webhook for notifications (optional)
PLATFORM_TEST_SLACK_WEBHOOK=

# ============================================
# OPTIONAL: AI-Assisted Features
# ============================================

# Enable self-healing locators (true/false)
PLATFORM_TEST_SELF_HEALING=true

# OpenAI API key for AI-assisted form filling (optional)
PLATFORM_TEST_OPENAI_API_KEY=

# ============================================
# OPTIONAL: CI/CD Integration
# ============================================

# Running in CI environment
CI=false

# GitHub token for PR comments (optional)
GITHUB_TOKEN=
