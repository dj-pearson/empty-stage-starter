# Platform Test Configuration
# Copy this file to .env and update with your values

# ============================================
# REQUIRED: Application URL
# ============================================
PLATFORM_TEST_BASE_URL=http://localhost:8080

# ============================================
# REQUIRED: Test Account Credentials
# ============================================
# Primary test account (used for most tests)
PLATFORM_TEST_EMAIL=test@example.com
PLATFORM_TEST_PASSWORD=TestPassword123!

# ============================================
# OPTIONAL: Additional Test Accounts
# ============================================
# Secondary account (for multi-user tests)
# PLATFORM_TEST_EMAIL_2=test2@example.com
# PLATFORM_TEST_PASSWORD_2=TestPassword123!

# Admin account (for admin feature tests)
# PLATFORM_TEST_ADMIN_EMAIL=admin@example.com
# PLATFORM_TEST_ADMIN_PASSWORD=AdminPassword123!

# ============================================
# OPTIONAL: Browser Settings
# ============================================
# Browser to use: chromium (default), firefox, webkit
PLATFORM_TEST_BROWSER=chromium

# Run in headless mode (no visible browser window)
PLATFORM_TEST_HEADLESS=true

# Slow down actions (milliseconds) - useful for debugging
# PLATFORM_TEST_SLOW_MO=0

# ============================================
# OPTIONAL: Discovery Settings
# ============================================
# Maximum crawl depth (how many levels deep to navigate)
PLATFORM_TEST_MAX_DEPTH=5

# Maximum pages to discover
PLATFORM_TEST_MAX_PAGES=100

# Maximum time per page (milliseconds)
PLATFORM_TEST_PAGE_TIMEOUT=30000

# Wait time between navigation (milliseconds)
PLATFORM_TEST_NAVIGATION_DELAY=1000

# ============================================
# OPTIONAL: Route Configuration
# ============================================
# Routes to exclude from discovery (comma-separated glob patterns)
# PLATFORM_TEST_EXCLUDE_ROUTES=/admin/*,/debug/*,/api/*,/internal/*

# Routes that require authentication (comma-separated glob patterns)
# PLATFORM_TEST_AUTH_ROUTES=/dashboard/*,/settings/*,/profile/*,/account/*

# Login page path (if different from default)
# PLATFORM_TEST_LOGIN_PATH=/auth

# ============================================
# OPTIONAL: Test Execution Settings
# ============================================
# Number of parallel test workers
PLATFORM_TEST_WORKERS=3

# Number of retries for flaky tests
PLATFORM_TEST_RETRIES=2

# Default timeout for test actions (milliseconds)
PLATFORM_TEST_TIMEOUT=30000

# ============================================
# OPTIONAL: Payment Testing (Stripe)
# ============================================
# Use Stripe test card: 4242 4242 4242 4242
# PLATFORM_TEST_STRIPE_CARD=4242424242424242
# PLATFORM_TEST_STRIPE_EXP=12/28
# PLATFORM_TEST_STRIPE_CVC=123
# PLATFORM_TEST_STRIPE_ZIP=12345

# ============================================
# OPTIONAL: Reporting
# ============================================
# Generate HTML report
PLATFORM_TEST_REPORT_HTML=true

# Generate JSON report
PLATFORM_TEST_REPORT_JSON=true

# Generate JUnit XML report (for CI/CD)
PLATFORM_TEST_REPORT_JUNIT=true

# Take screenshots on test failure
PLATFORM_TEST_SCREENSHOT_ON_FAILURE=true

# Record video of tests
# PLATFORM_TEST_VIDEO=false

# ============================================
# OPTIONAL: Visual Regression Testing
# ============================================
# Enable visual regression testing
# PLATFORM_TEST_VISUAL_REGRESSION=false

# Threshold for visual differences (0-1, where 0.01 = 1%)
# PLATFORM_TEST_VISUAL_THRESHOLD=0.01

# ============================================
# OPTIONAL: Accessibility Testing
# ============================================
# Enable accessibility scanning
PLATFORM_TEST_A11Y=true

# Fail tests on accessibility violations
# PLATFORM_TEST_A11Y_FAIL_ON_VIOLATIONS=false

# ============================================
# OPTIONAL: Network Monitoring
# ============================================
# Monitor and log network requests
# PLATFORM_TEST_NETWORK_MONITOR=true

# Fail on HTTP errors (4xx, 5xx)
# PLATFORM_TEST_FAIL_ON_HTTP_ERRORS=false
